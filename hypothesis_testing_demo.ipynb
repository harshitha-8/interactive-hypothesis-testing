# Simulation Controls
L = widgets.IntSlider(min=10, max=1000, value=100, step=1, description='$L$', orientation='horizontal', layout=Layout(width='300px', height='30px'), continuous_update=False)
L.style.handle_color = 'gray'
alpha = widgets.FloatSlider(min=0, max=1.0, value=0.05, step=0.01, description='$\\alpha$', orientation='horizontal', layout=Layout(width='300px', height='30px'), continuous_update=False)
