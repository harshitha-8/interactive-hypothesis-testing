# Combine Widgets
ui4 = widgets.HBox([ui1, ui2, ui3])
ui_final = widgets.VBox([l, ui4])

# --- Main Logic Function ---

def f_make(n1, m1, s1, n2, m2, s2, L, alpha):
    # 1. Generate Synthetic Data
    np.random.seed(73073)
    x1 = np.random.normal(loc=m1, scale=s1, size=n1)
    np.random.seed(73074)
    x2 = np.random.normal(loc=m2, scale=s2, size=n2)
  
    # 2. Analytical Solution (Welch's t-test)
    # Calculate Degrees of Freedom (nu)
    mu_ratio = (s2*s2)/(s1*s1)
    nu_numerator = (1/n1 + mu_ratio/n2)**2
    nu_denominator = (1/(n1**2 * (n1-1))) + ((mu_ratio**2)/(n2**2 * (n2-1)))
    nu = nu_numerator / nu_denominator
    
    # Distributions for plotting
    prop_values = np.linspace(-8.0, 8.0, 100)
    analytical_distribution = stats.t.pdf(prop_values, df=nu) 
    analytical_tcrit = stats.t.ppf(1.0 - alpha/2, df=nu) # Two-tailed
    
    # Calculate observed t-stat
    t_stat_observed, p_value_analytical = stats.ttest_ind(x1, x2, equal_var=False)
    
    # 3. Bootstrap Solution
    # Shift means to global average (Null Hypothesis: means are equal)
    global_average = np.average(np.concatenate([x1, x2]))   
    x1s = x1 - np.average(x1) + global_average
    x2s = x2 - np.average(x2) + global_average
    
    t_stat_bootstrap = np.zeros(L)
    
    random.seed(73075)
    for l_idx in range(0, L):
        # Sampling with replacement
        samples1 = random.choices(x1s, k=len(x1s))
        samples2 = random.choices(x2s, k=len(x2s))
        # Calculate t-stat for this realization
        t_stat_realization, _ = stats.ttest_ind(samples1, samples2, equal_var=False)
        t_stat_bootstrap[l_idx] = t_stat_realization
      
    # Calculate bootstrap confidence intervals
    bootstrap_lower = np.percentile(t_stat_bootstrap, (alpha/2)*100)
    bootstrap_upper = np.percentile(t_stat_bootstrap, (1 - alpha/2)*100)
    
    # --- Plotting ---
    plt.figure(figsize=(12, 5))
    
    # Plot 1: Sample Distributions
    plt.subplot(121)
    plt.hist(x1, density=True, alpha=0.4, color="red", edgecolor="black", bins=np.linspace(0, 50, 50), label='$x_1$')
    plt.hist(x2, density=True, alpha=0.4, color="yellow", edgecolor="black", bins=np.linspace(0, 50, 50), label='$x_2$')
    plt.ylim([0, 0.4])
    plt.xlim([0.0, 30.0])
    plt.title('Sample Distributions')
    plt.xlabel('Value')
    plt.ylabel('Density')
    plt.legend()
    
    # Plot 2: t-statistic Distributions
    plt.subplot(122)
    plt.ylim([0, 0.6])
    plt.xlim([-8.0, 8.0])
    plt.title('Bootstrap vs Analytical $t_{statistic}$ Distributions')
    plt.xlabel('$t_{statistic}$')
    plt.ylabel('Density')
    
    # Plot Analytical curve
    plt.plot(prop_values, analytical_distribution, color='red', label='Analytical Distribution', linewidth=2)
    
    # Plot Bootstrap histogram
    plt.hist(t_stat_bootstrap, density=True, alpha=0.2, color="blue", edgecolor="black", bins=np.linspace(-8.0, 8.0, 50), label='Bootstrap Distribution')

    # Plot Lines and Critical Regions
    plt.vlines(t_stat_observed, 0, 0.6, color='black', linewidth=2, label='Observed $t_{stat}$')
    plt.vlines(bootstrap_lower, 0, 0.6, color='blue', linestyle='dashed', label='Bootstrap CI')
    plt.vlines(bootstrap_upper, 0, 0.6, color='blue', linestyle='dashed')
    
    # Fill critical regions
    plt.fill_between(prop_values, 0, analytical_distribution, where=prop_values <= -analytical_tcrit, facecolor='red', alpha=0.2)
    plt.fill_between(prop_values, 0, analytical_distribution, where=prop_values >= analytical_tcrit, facecolor='red', alpha=0.2)
    
    plt.legend(loc='upper right')
    plt.tight_layout()
    plt.show()

# Connect Function to Widgets
interactive_plot = widgets.interactive_output(f_make, {
    'n1': n1, 'm1': m1, 's1': s1, 
    'n2': n2, 'm2': m2, 's2': s2, 
    'L': L, 'alpha': alpha
})

display(ui_final, interactive_plot)
